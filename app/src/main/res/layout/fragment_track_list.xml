<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_tracks"
        android:name="com.xavipandis.soundxtream.activities.track.TrackListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.xavipandis.soundxtream.activities.track.TrackListFragment"
        tools:listitem="@layout/track_list_content" >

    </android.support.v7.widget.RecyclerView>

</android.support.v4.widget.SwipeRefreshLayout>


